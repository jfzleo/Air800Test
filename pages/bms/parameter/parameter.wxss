/* pages/bms/parameter/parameter.wxss */

.parameter-container{display: flex; flex-direction: column; height: 100%; box-sizing: border-box;}

.parameter-container .itemList{box-sizing:border-box; margin:0 32rpx; border: 1px solid black;display: flex;border-bottom: none;}
.parameter-container .itemList:last-child{border-bottom: 1px solid black;}
.parameter-container .itemList .key{background: #B9C1C0;color: #365A91;padding: 0 4px; width: 62%;}
.parameter-container .itemList .value{padding: 0 4px;word-break:break-all;background: #4170BE;color: #fff;flex: 1;}

.parameter-container .buttonGroup {
  display: flex;
  box-sizing: border-box;
  background-color: #F8F8F8;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 90rpx;
  padding: 0rpx 32rpx;
}
.parameter-container .buttonGroup .hidden {
  display: none;
}
.parameter-container .buttonGroup button {
  display: flex;
  box-sizing: border-box;
  height: 60rpx;
  font-size: 32rpx;
  justify-content: center;
  align-items: center;
  flex : 1;
  margin: 0rpx 10rpx;
}
.parameter-container .buttonGroup-hidden {
  display: none;
}
.parameter-container scroll-view {
  display: block;
  box-sizing: border-box;
  height: 600rpx;
  flex:1;
  padding: 0;
}