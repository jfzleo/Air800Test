.container {
  flex-direction: column;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  align-content: center;
  padding: 0rpx 0rpx;
}

button{
  width:50%;
  margin: 10rpx 30rpx;
  height: 90rpx;
  font-size: 34rpx;
}
.login-input {
  border: 1px solid #ccc;
  text-align: center;
  width:60%;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}
.login-line {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin: 20rpx 20rpx;
}